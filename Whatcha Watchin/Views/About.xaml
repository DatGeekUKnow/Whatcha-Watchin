<Page
    x:Class="Whatcha_Watchin.Views.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Whatcha_Watchin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontSize="20"
    FontFamily="MV Boli"
    mc:Ignorable="d" Unloaded="Page_Unloaded">
    <Page.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF365BAA" Offset="0"/>
            <GradientStop Color="#663F7037" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>


    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="60">About Page</TextBlock>
            <TextBlock Name="authors" Margin="0,20,0,0" FontSize="20" HorizontalAlignment="Center">Gavin McCulley and Casey Whitener</TextBlock>
            <TextBlock Margin="0,10,0,0" FontSize="30" HorizontalAlignment="Center">Description</TextBlock>
            <Border Background="#66000000" HorizontalAlignment="Center" Padding="20">
                <TextBlock TextAlignment="Center" Width="500" TextWrapping="WrapWholeWords">This application will show you a random movie or show. Just select the provider and type of content you wish to view and click next to view new media.</TextBlock>
            </Border>
        </StackPanel>
    </Grid>
</Page>
